<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="sonata.user.registration.controller" class="Sonata\UserBundle\Controller\UserRegistrationController" public="true">
            <argument type="service" id="event_dispatcher" />
            <argument type="service" id="fos_user.registration.form.factory" />
            <argument type="service" id="fos_user.user_manager" />
            <argument type="service" id="security.token_storage" />
            <argument>%fos_user.firewall_name%</argument>
        </service>
    </services>

</container>
